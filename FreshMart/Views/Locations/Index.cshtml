@model IEnumerable<FreshMart.Models.Location>

@{
    ViewData["Title"] = "Index";
    bool isAdmin = User.IsInRole("Administrator");
}

<h1>Locations</h1>

@if (isAdmin)
{
    <a asp-action="Create">Create New</a>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeSchedule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSchedule)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary action-btn">Details</a>
                @if (isAdmin){
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary action-btn">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary action-btn">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
